<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_app_logo"
        android:id="@+id/iv_app_logo"
        android:layout_width="68dp"
        android:layout_height="68dp" />

    <RelativeLayout
        android:layout_toEndOf="@id/iv_app_logo"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_toStartOf="@+id/btn_check_app"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:text="dfjdklafjkdlafjlkdajflkdafkdakfkdja"
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:text="dfjdklafjkdlafjlkdajflkdafkdakfkdja"
                android:id="@+id/tv_app_abstrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/btn_check_app"
            android:layout_marginLeft="10dp"
            android:text="详情"
            android:background="@drawable/bg_app_logo"
            android:layout_width="68dp"
            android:layout_height="34dp" />

        <View
            android:id="@+id/underline"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </RelativeLayout>

</RelativeLayout>